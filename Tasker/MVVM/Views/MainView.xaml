<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             x:Class="Tasker.MVVM.Views.MainView"    
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Tasker.Converters"
         
             Title="MainView">

    <ContentPage.Resources>
        <converters:ColorConverter x:Key="ColorConverter" />
    </ContentPage.Resources>
    
    <Grid Margin="15" RowDefinitions=".1*,.3*,.7*">
        <Label Text="My Tasks" StyleClass="DarkBlue, Header"></Label>
        <Grid Grid.Row="1" RowDefinitions=".2*, .8*">
            <Label StyleClass="LightBlue, SubHeader" Text="CATEGORIES"></Label>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal"></LinearItemsLayout>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <RoundRectangle>
                            </RoundRectangle>
                            <VerticalStackLayout Padding="15" Spacing="10">
                                <Label StyleClass="LightBlue" Text="{Binding PendingTasks, StringFormat='{0} Task'}"></Label>
                                <Label StyleClass="DarkBlue, CardTitle"
                                       Text="{Binding CategoryName}"></Label>
                                <ProgressBar Progress="{Binding Percentage}" ProgressColor="{Binding Color, Converter={StaticResource ColorConverter}}"></ProgressBar>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Grid Grid.Row="2" RowDefinitions=".2*, .8*">
            <Label StyleClass="LightBlue,SubHeader" Text="PENDING TASKS"></Label>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Transparent">
                            <HorizontalStackLayout>
                                
                                <CheckBox IsChecked="{Binding Completed}"
                                          VerticalOptions="Center"
                                          Color="{Binding TaskColor, Converter={StaticResource ColorConverter}}">
                                    
                                </CheckBox>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>  
</ContentPage>